<h1>Listing Locations</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Enabled?</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= location.enabled ? "Yes" : "No" %></td>
        <td><%= link_to "Edit", edit_location_url(location) %></td>
        <td><%= link_to "Delete", location, :method => :delete, :confirm => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to "Add Location", :new_location %>
