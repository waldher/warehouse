<div>The following information will be used in your Real EStates for the realator.</div>

<%= form_for(@realestate) do |f| %>
  <% if @realestate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@realestate.errors.count, "error") %> prohibited this realestate from being saved:</h2>

      <ul>
      <% @realestate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



 
  <%= fields_for :real_estate do |re| %>
    <div class="field">
      <%= label_tag  "Ad Title" %><br />
      <%= re.text_area :ad_title, :rows => 10, :cols => 20 %>
    </div>

    <div class="field">
      <%= label_tag  "Ad Description" %><br />
      <%= re.text_area :ad_description %>
    </div>

    <div class="field">
      <%= label_tag  "Bedrooms" %><br />
      <%= re.select :bedrooms, ['1','2','3','4','5','6','7','8'] %>
    </div>

    <div class="field">
      <%= label_tag  "Price($)" %><br />
      <%= re.text_field :price %>
    </div>

    <div class="field">
      <%= label_tag  "Cats" %><br />
      <%= re.select :cats, [true,false] %>
    </div>

    <div class="field">
      <%= label_tag  "Dogs" %><br />
      <%= re.select :dogs,[true,false] %>
    </div>

    <div class="field">
      <%= label_tag  "Active" %><br />
      <%= re.select :active,[true,false] %>
    </div>
  <% end %>

  <div class="field">
    <%= fields_for :real_estate_image do |rim| %>
      <%= label_tag  "Real Estate Images" %><br />
      <%= rim.file_field :photo %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
